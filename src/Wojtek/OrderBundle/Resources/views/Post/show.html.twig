{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Post</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Userlogin</th>
                <td>{{ entity.userLogin }}</td>
            </tr>
            <tr>
                <th>Item</th>
                <td>{{ entity.item }}</td>
            </tr>
            <tr>
                <th>Userpaid</th>
                <td>{{ entity.userPaid }}</td>
            </tr>
            <tr>
                <th>Datepayment</th>
                <td>{{ entity.datePayment|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Dateorder</th>
                <td>{{ entity.dateOrder|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Orderid</th>
                <td>{{ entity.orderId }}</td>
            </tr>
            <tr>
                <th>Priceshipping</th>
                <td>{{ entity.priceShipping }}</td>
            </tr>
            <tr>
                <th>Orderprice</th>
                <td>{{ entity.orderPrice }}</td>
            </tr>
            <tr>
                <th>Trackingnumber</th>
                <td>{{ entity.trackingNumber }}</td>
            </tr>
            <tr>
                <th>Otherdata</th>
                <td>{{ entity.otherData }}</td>
            </tr>
        </tbody>
    </table>

    <ul class="record_actions">
        <li>
            <a href="{{ path('post') }}">
                Back to the list
            </a>
        </li>
        <li>
            <a href="{{ path('post_edit', { 'id': entity.id }) }}">
                Edit
            </a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>
{% endblock %}
